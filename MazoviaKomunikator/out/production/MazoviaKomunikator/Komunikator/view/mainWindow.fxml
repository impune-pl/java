<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar maxHeight="30.0" maxWidth="600.0" minHeight="30.0" minWidth="600.0" prefHeight="30.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
               <items>
                  <MenuItem fx:id="changeNetworkInterface" mnemonicParsing="false" text="Change Network Interface" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox layoutX="200.0" layoutY="30.0" prefHeight="300.0" prefWidth="400.0">
         <children>
            <ListView fx:id="messageDisplay" prefHeight="400.0" prefWidth="400.0" />
         </children>
      </VBox>
      <VBox layoutY="30.0" prefHeight="370.0" prefWidth="200.0">
         <children>
            <ListView fx:id="adressLinst" prefHeight="370.0" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox layoutX="200.0" layoutY="330.0" prefHeight="70.0" prefWidth="330.0">
         <children>
            <TextArea fx:id="messageWrite" prefHeight="200.0" prefWidth="200.0" promptText="Write your message here" />
         </children>
      </VBox>
      <VBox layoutX="530.0" layoutY="330.0" prefHeight="70.0" prefWidth="70.0">
         <children>
            <Button id="submitButton" fx:id="messageSend" mnemonicParsing="false" prefHeight="70.0" prefWidth="70.0" stylesheets="@style.css" text="SEND" />
         </children>
      </VBox>
   </children>
</AnchorPane>
